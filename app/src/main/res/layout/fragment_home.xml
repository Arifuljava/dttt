<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeACTIVITY"
    android:background="@color/back"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="gone"

                        android:id="@+id/dollarrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="false"
                        android:layout_marginLeft="0dp"

                        android:fontFamily="@font/montserrat"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:text="Our Services"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dailyCheckCard"
                            android:layout_width="0dp"
                            android:onClick="home"
                            android:layout_height="140dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/nnn"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="5dp"
                            android:padding="16dp"
                            android:layout_marginLeft="0dp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:foregroundTint="@color/white"
                                    android:layout_width="50dp"
                                    android:id="@+id/image1"
                                    android:src="@drawable/home"
                                    android:layout_marginTop="30dp"
                                    android:layout_alignParentRight="false"
                                    android:layout_height="@dimen/space_50dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerInParent="false"

                                    android:layout_gravity="center"
                                    />


                                <TextView
                                    android:layout_below="@id/image1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="false"
                                    android:padding="8dp"
                                    android:layout_marginLeft="0dp"
                                    android:textSize="10dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/montserrat"
                                    android:text="Home"
                                    android:gravity="center_horizontal" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/luckySpinCard"
                            android:layout_width="0dp"
                            android:onClick="calculator"
                            android:layout_height="140dp"
                            android:layout_weight="1"

                            app:cardBackgroundColor="@color/nnn"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="5dp"
                            android:layout_marginLeft="0dp"
                            android:clickable="true"
                            android:padding="16dp"
                            android:foreground="?attr/selectableItemBackground">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView


                                    android:layout_gravity="center"                                android:foregroundTint="@color/white"
                                    android:layout_width="50dp"
                                    android:id="@+id/image2"
                                    android:src="@drawable/balance2"
                                    android:layout_marginTop="30dp"
                                    android:layout_alignParentRight="false"
                                    android:layout_height="@dimen/space_50dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerInParent="false"
                                    />


                                <TextView
                                    android:layout_below="@id/image2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="false"
                                    android:padding="8dp"
                                    android:layout_marginLeft="0dp"
                                    android:textSize="10dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/montserrat"
                                    android:text="Balance"
                                    android:gravity="center_horizontal" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/taskCard"
                            android:onClick="due"
                            android:layout_width="0dp"
                            android:layout_height="140dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/nnn"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="5dp"
                            android:layout_marginLeft="0dp"
                            android:clickable="true"
                            android:padding="16dp"
                            android:foreground="?attr/selectableItemBackground">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@drawable/ki"

                                    android:layout_gravity="center"

                                    android:foregroundTint="@color/white"
                                    android:layout_width="50dp"
                                    android:id="@+id/image3"
                                    android:layout_marginTop="30dp"
                                    android:layout_alignParentRight="false"
                                    android:layout_height="@dimen/space_50dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerInParent="false"
                                    />


                                <TextView
                                    android:layout_below="@id/image3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="false"
                                    android:padding="8dp"
                                    android:layout_marginLeft="0dp"
                                    android:textSize="10dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/montserrat"
                                    android:text="Deposit"
                                    android:gravity="center_horizontal" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                        <LinearLayout
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/linearLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <androidx.cardview.widget.CardView
                                android:id="@+id/referCardq"
                                android:layout_width="0dp"
                                android:layout_height="140dp"
                                android:layout_weight="1"
                                android:onClick="cash"
                                app:cardBackgroundColor="@color/nnn"
                                app:cardUseCompatPadding="true"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="5dp"
                                android:layout_marginLeft="0dp"
                                android:padding="16dp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:foregroundTint="@color/white"
                                        android:layout_width="50dp"
                                        android:src="@drawable/ddddr"
                                        android:id="@+id/image4"
                                        android:layout_marginTop="30dp"
                                        android:layout_alignParentRight="false"
                                        android:layout_height="@dimen/space_50dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerInParent="false"
                                        />


                                    <TextView
                                        android:layout_below="@id/image4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerInParent="false"
                                        android:padding="8dp"
                                        android:layout_marginLeft="0dp"
                                        android:textSize="10dp"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/montserrat"
                                        android:text="Packages"
                                        android:gravity="center_horizontal" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:visibility="visible"
                                android:id="@+id/watccchCard"
                                android:layout_width="0dp"
                                android:layout_height="140dp"
                                android:layout_weight="1"
                                android:onClick="cash_memo"
                                app:cardBackgroundColor="@color/nnn"
                                app:cardUseCompatPadding="true"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="5dp"
                                android:layout_marginLeft="0dp"
                                android:clickable="true"
                                android:padding="16dp"
                                android:foreground="?attr/selectableItemBackground">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView

                                        android:layout_gravity="center"
                                        android:foregroundTint="@color/white"
                                        android:layout_width="50dp"
                                        android:src="@drawable/task"
                                        android:id="@+id/image5"
                                        android:layout_marginTop="30dp"
                                        android:layout_alignParentRight="false"
                                        android:layout_height="@dimen/space_50dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerInParent="false"
                                        />


                                    <TextView
                                        android:layout_below="@id/image5"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerInParent="false"
                                        android:padding="8dp"
                                        android:layout_marginLeft="0dp"
                                        android:textSize="10dp"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/montserrat"
                                        android:text="Daily Task"
                                        android:gravity="center_horizontal" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:visibility="visible"
                                android:id="@+id/recccdeemCard"
                                android:layout_width="0dp"
                                android:layout_height="140dp"
                                android:layout_weight="1"
                                android:onClick="call"
                                app:cardBackgroundColor="@color/nnn"
                                app:cardUseCompatPadding="true"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="5dp"
                                android:layout_marginLeft="0dp"
                                android:clickable="true"
                                android:padding="16dp"
                                android:foreground="?attr/selectableItemBackground">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                      android:src="@drawable/with"
                                        android:layout_gravity="center"
                                        android:foregroundTint="@color/white"
                                        android:layout_width="50dp"
                                        android:id="@+id/image5"
                                        android:layout_marginTop="30dp"
                                        android:layout_alignParentRight="false"
                                        android:layout_height="@dimen/space_50dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerInParent="false"
                                        />


                                    <TextView
                                        android:layout_below="@id/image5"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerInParent="false"
                                        android:padding="8dp"
                                        android:layout_marginLeft="0dp"
                                        android:textSize="10dp"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/montserrat"
                                        android:text="Withdraw"
                                        android:gravity="center_horizontal" />

                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical"
                                android:padding="4dp"
                                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                                <LinearLayout
                                    android:id="@+id/livvvnearLayout1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">



                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/referqqqCard"
                                        android:layout_width="0dp"
                                        android:layout_height="140dp"
                                        android:layout_weight="1"
                                        android:onClick="savings"
                                        app:cardBackgroundColor="@color/nnn"
                                        app:cardUseCompatPadding="true"
                                        app:cardElevation="4dp"
                                        app:cardCornerRadius="5dp"
                                        android:layout_marginLeft="0dp"
                                        android:clickable="true"
                                        android:padding="16dp"
                                        android:foreground="?attr/selectableItemBackground">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <ImageView

                                                android:layout_gravity="center"
                                                android:foregroundTint="@color/white"
                                                android:layout_width="50dp"
                                                android:id="@+id/image4"
                                                android:src="@drawable/ball"
                                                android:layout_marginTop="30dp"
                                                android:layout_alignParentRight="false"
                                                android:layout_height="@dimen/space_50dp"
                                                android:layout_centerHorizontal="true"
                                                android:layout_centerInParent="false"
                                                />


                                            <TextView
                                                android:layout_below="@id/image4"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentLeft="true"
                                                android:layout_centerInParent="false"
                                                android:padding="8dp"
                                                android:layout_marginLeft="0dp"
                                                android:textSize="10dp"
                                                android:textAlignment="center"
                                                android:textColor="@color/black"
                                                android:fontFamily="@font/montserrat"
                                                android:text="Send Money"
                                                android:gravity="center_horizontal" />

                                        </RelativeLayout>

                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:visibility="visible"
                                        android:id="@+id/watchCard"
                                        android:layout_width="0dp"
                                        android:layout_height="140dp"
                                        android:layout_weight="1"
                                        android:onClick="news"
                                        app:cardBackgroundColor="@color/nnn"
                                        app:cardUseCompatPadding="true"
                                        app:cardElevation="4dp"
                                        app:cardCornerRadius="5dp"
                                        android:layout_marginLeft="0dp"
                                        android:clickable="true"
                                        android:padding="16dp"
                                        android:foreground="?attr/selectableItemBackground">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <ImageView

                                                android:layout_gravity="center"
                                                android:foregroundTint="@color/white"
                                                android:layout_width="50dp"
                                                android:id="@+id/image5"
                                                android:src="@drawable/nono"
                                                android:layout_marginTop="30dp"
                                                android:layout_alignParentRight="false"
                                                android:layout_height="@dimen/space_50dp"
                                                android:layout_centerHorizontal="true"
                                                android:layout_centerInParent="false"
                                                />


                                            <TextView
                                                android:layout_below="@id/image5"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentLeft="true"
                                                android:layout_centerInParent="false"
                                                android:padding="8dp"
                                                android:layout_marginLeft="0dp"
                                                android:textSize="10dp"
                                                android:textAlignment="center"
                                                android:textColor="@color/black"
                                                android:fontFamily="@font/montserrat"
                                                android:text="Notification"
                                                android:gravity="center_horizontal" />

                                        </RelativeLayout>

                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:visibility="visible"
                                        android:id="@+id/redeemCard"
                                        android:layout_width="0dp"
                                        android:layout_height="140dp"
                                        android:layout_weight="1"
                                        android:onClick="onlineservice"
                                        app:cardBackgroundColor="@color/nnn"
                                        app:cardUseCompatPadding="true"
                                        app:cardElevation="4dp"
                                        app:cardCornerRadius="5dp"
                                        android:layout_marginLeft="0dp"
                                        android:clickable="true"
                                        android:padding="16dp"
                                        android:foreground="?attr/selectableItemBackground">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <ImageView

                                                android:foregroundTint="@color/white"
                                                android:layout_width="50dp"
                                                android:id="@+id/image5"
                                                android:layout_marginTop="30dp"
                                                android:layout_alignParentRight="false"
                                                android:layout_height="@dimen/space_50dp"
                                                android:scaleType="fitXY"
                                                android:src="@drawable/yu"
                                                android:layout_centerHorizontal="true"
                                                android:layout_centerInParent="false"

                                                android:layout_gravity="center" />


                                            <TextView
                                                android:layout_below="@id/image5"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentLeft="true"
                                                android:layout_centerInParent="false"
                                                android:padding="8dp"
                                                android:layout_marginLeft="0dp"
                                                android:textSize="10dp"
                                                android:textAlignment="center"
                                                android:textColor="@color/black"
                                                android:fontFamily="@font/montserrat"
                                                android:text="Profile"
                                                android:gravity="center_horizontal" />

                                        </RelativeLayout>


                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>




                    </LinearLayout>
                    //6-9

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>